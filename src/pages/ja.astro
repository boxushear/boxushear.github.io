---
import jaProfile from "../content/profile-ja.json";
---

<!doctype html>
<html lang="ja">
  <head>
    <meta charset="utf-8" />
    <title>{jaProfile.nameKanji} - „Éù„Éº„Éà„Éï„Ç©„É™„Ç™</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css"
    />
    <style>
      :root {
        --primary: #2575fc;
        --primary-soft: #6a11cb;
        --text-main: #222;
        --text-sub: #555;
        --bg: radial-gradient(circle at 20% 30%, #ffffff, #f2f5fa, #e7ebf0);
      }

      * {
        box-sizing: border-box;
      }

      body {
        margin: 0;
        min-height: 100vh;
        font-family:
          "Inter",
          "Noto Sans JP",
          system-ui,
          -apple-system,
          sans-serif;
        background: var(--bg);
        color: var(--text-main);
      }

      a {
        color: var(--primary);
        text-decoration: none;
      }

      a:hover {
        text-decoration: underline;
      }

      /* ===== NAV BAR ===== */

      .nav-wrapper {
        position: sticky;
        top: 0;
        z-index: 20;
        backdrop-filter: blur(12px);
      }

      .nav {
        max-width: 1080px;
        margin: 0 auto;
        padding: 16px 24px 0;
        display: flex;
        align-items: flex-end;
        justify-content: flex-start;
        gap: 32px;
        border-bottom: 1px solid rgba(0, 0, 0, 0.05);
      }

      .nav-left {
        font-size: 1.6rem;
        font-weight: 700;
        background: linear-gradient(90deg, var(--primary-soft), var(--primary));
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        cursor: pointer;
        padding-bottom: 6px;
        border-bottom: 3px solid transparent;
        white-space: nowrap;
      }

      .nav-tabs {
        display: flex;
        gap: 18px;
        margin-left: auto;
        flex-wrap: wrap;
      }

      .nav-tab {
        font-size: 0.96rem;
        padding: 6px 0;
        cursor: pointer;
        color: var(--text-sub);
        border-bottom: 2px solid transparent;
        transition: all 0.25s ease;
        display: flex;
        align-items: center;
        gap: 6px;
      }

      .nav-tab span.icon {
        font-size: 0.9rem;
        color: var(--primary);
      }

      .nav-tab.active,
      .nav-left.active {
        color: var(--primary);
        border-bottom-color: var(--primary);
      }

      /* ===== LAYOUT ===== */

      .page {
        max-width: 1080px;
        margin: 0 auto;
        padding: 24px;
      }

      .section {
        margin-top: 18px;
      }

      .card {
        width: 100%;
        background: #ffffff;
        border-radius: 18px;
        padding: 28px 28px 32px;
        box-shadow: 0 10px 26px rgba(15, 23, 42, 0.08);
        line-height: 1.8;
        text-align: left;
      }

      .section-title {
        font-size: 1.25rem;
        font-weight: 600;
        color: var(--primary);
        margin-bottom: 10px;
        display: flex;
        align-items: center;
        gap: 8px;
      }

      .section-title i {
        color: var(--primary);
      }

      .muted {
        color: var(--text-sub);
        font-size: 0.95rem;
      }

      .about-title {
        font-size: 1.05rem;
        font-weight: 500;
        color: var(--text-sub);
        margin-bottom: 8px;
      }

      .about-contact {
        display: flex;
        flex-wrap: wrap;
        gap: 14px;
        margin-top: 6px;
        font-size: 0.9rem;
        color: var(--text-sub);
      }

      .about-contact-item {
        display: flex;
        align-items: center;
        gap: 6px;
      }

      .about-contact-item i {
        color: var(--primary);
      }

      .languages {
        margin-top: 14px;
      }

      .languages-items {
        display: flex;
        flex-wrap: wrap;
        gap: 6px;
      }

      .badge {
        display: inline-flex;
        align-items: center;
        padding: 3px 10px;
        border-radius: 999px;
        font-size: 0.78rem;
        background: rgba(37, 117, 252, 0.06);
        color: var(--primary);
        margin-right: 6px;
        margin-top: 4px;
      }

      ul {
        padding-left: 20px;
        margin: 6px 0 0;
      }

      .exp-item,
      .proj-item {
        margin-bottom: 14px;
      }

      .exp-role {
        font-weight: 600;
      }

      .exp-meta {
        font-size: 0.9rem;
        color: var(--text-sub);
      }

      .download-btn {
        display: inline-flex;
        align-items: center;
        gap: 8px;
        margin-top: 16px;
        padding: 9px 18px;
        border-radius: 22px;
        border: 1px solid var(--primary);
        font-size: 0.9rem;
        color: var(--primary);
        cursor: pointer;
        transition: all 0.25s ease;
        background: #ffffff;
      }

      .download-btn:hover {
        background: linear-gradient(90deg, var(--primary-soft), var(--primary));
        color: #fff;
        box-shadow: 0 6px 16px rgba(37, 117, 252, 0.35);
      }

      [data-content] {
        display: none;
      }

      [data-content].active {
        display: block;
      }

      /* ===== FOOTER ===== */

      footer {
        text-align: center;
        font-size: 0.85rem;
        color: #777;
        padding: 24px 0;
      }

      .footer-links {
        margin-top: 10px;
      }

      .footer-links a {
        color: var(--primary);
        margin: 0 10px;
        font-weight: 500;
      }

      .footer-links a:hover {
        text-decoration: underline;
      }

      @media (max-width: 720px) {
        .nav {
          flex-wrap: wrap;
          gap: 10px;
        }
        .nav-tabs {
          margin-left: 0;
          justify-content: flex-start;
        }
        .page {
          padding: 18px;
        }
        .card {
          padding: 22px 18px 26px;
        }
      }
    </style>
  </head>

