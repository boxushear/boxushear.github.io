    </main>

    <!-- FOOTER -->
    <footer>
      <div>¬© 2025 {jaProfile.nameKanji} | Powered by Astro üöÄ</div>
      <div class="footer-links">
        <a href="/">Home</a>
        <a href="/en">English</a>
      </div>
    </footer>

    <script is:inline>
      const tabs = document.querySelectorAll("[data-tab]");
      const contents = document.querySelectorAll("[data-content]");
      const nameTab = document.querySelector(".nav-left");

      function activate(tab) {
        contents.forEach((c) => {
          c.classList.toggle("active", c.dataset.content === tab);
        });
        tabs.forEach((t) => {
          t.classList.toggle("active", t.dataset.tab === tab);
        });
        if (nameTab) {
          nameTab.classList.toggle("active", tab === "about");
        }
      }

      tabs.forEach((t) => {
        t.addEventListener("click", () => {
          activate(t.dataset.tab);
          window.scrollTo({ top: 0, behavior: "smooth" });
        });
      });

      if (nameTab) {
        nameTab.addEventListener("click", () => {
          activate("about");
          window.scrollTo({ top: 0, behavior: "smooth" });
        });
      }

      // PDF „ÉÄ„Ç¶„É≥„É≠„Éº„ÉâÔºà2„Å§ÂêåÊôÇÔºâ
      const btn = document.getElementById("ja-download-btn");
      if (btn) {
        btn.addEventListener("click", () => {
          [
            "/downloads/ja-rirekisho.pdf",
            "/downloads/ja-shokumukeirekisho.pdf",
          ].forEach((url) => {
            const a = document.createElement("a");
            a.href = url;
            a.download = "";
            document.body.appendChild(a);
            a.click();
            a.remove();
          });
        });
      }

      // ÂàùÊúüË°®Á§∫: „Éó„É≠„Éï„Ç£„Éº„É´
      activate("about");
    </script>
