---
import jaProfile from "../content/profile-ja.json";
---

<!doctype html>
<html lang="ja">
  <head>
    <meta charset="utf-8" />
    <title>{jaProfile.nameKanji} - 職務情報</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <style>
      body {
        margin: 0;
        padding: 32px 24px;
        font-family: -apple-system, BlinkMacSystemFont, system-ui, sans-serif;
        max-width: 900px;
        margin-inline: auto;
        line-height: 1.8;
      }
      .top-nav {
        display: flex;
        justify-content: flex-end;
        gap: 12px;
        margin-bottom: 12px;
        font-size: 14px;
      }
      h1 {
        margin: 0;
        font-size: 28px;
      }
      h2 {
        margin-top: 24px;
        margin-bottom: 8px;
        font-size: 18px;
        border-bottom: 1px solid #ddd;
      }
      .label {
        color: #666;
        font-size: 14px;
      }
      ul {
        padding-left: 20px;
        margin-top: 4px;
      }
      .download-btn {
        display: inline-block;
        margin-top: 8px;
        padding: 6px 14px;
        border-radius: 16px;
        border: 1px solid #888;
        font-size: 14px;
        text-decoration: none;
        color: #333;
        cursor: pointer;
      }
    </style>
  </head>

  <body>
    <div class="top-nav">
      <a href="/">Home</a>
      <a href="/en">English</a>
    </div>

    <header>
      <h1>{jaProfile.nameKanji}</h1>
      <div class="label">{jaProfile.nameKana}</div>
      <div class="label">生年月日：{jaProfile.birth}</div>
      <div class="label">住所：{jaProfile.address}</div>
      <div class="label">電話：{jaProfile.phone}</div>
      <div class="label">E-mail：{jaProfile.email}</div>
    </header>

    <section>
      <h2>概要（自己PR）</h2>
      <p>{jaProfile.summary}</p>
      {jaProfile.selfPR && <p>{jaProfile.selfPR}</p>}
      <div class="download-btn" id="ja-download-btn">
        履歴書＋職務経歴書（PDF）をダウンロード
      </div>
    </section>

    <section>
      <h2>スキル</h2>
      <ul>
        {jaProfile.skills.map((s) => <li>{s}</li>)}
      </ul>
    </section>

    <section>
      <h2>職歴</h2>
      {
        jaProfile.workHistory.map((job) => (
          <div>
            <strong>{job.period}</strong>：{job.company}（{job.location}）
            <div>{job.role}</div>
            <ul>
              {job.details.map((d) => (
                <li>{d}</li>
              ))}
            </ul>
          </div>
        ))
      }
    </section>

    <section>
      <h2>学歴</h2>
      {
        jaProfile.education.map((edu) => (
          <div>
            <strong>{edu.period}</strong>
            <div>{edu.details}</div>
          </div>
        ))
      }
    </section>

    <script is:inline>
      document.addEventListener("DOMContentLoaded", () => {
        const btn = document.getElementById("ja-download-btn");
        if (!btn) return;

        btn.addEventListener("click", () => {
          const files = [
            "/downloads/ja-rirekisho.pdf",
            "/downloads/ja-shokumukeirekisho.pdf",
          ];
          files.forEach((url) => {
            const a = document.createElement("a");
            a.href = url;
            a.download = "";
            document.body.appendChild(a);
            a.click();
            a.remove();
          });
        });
      });
    </script>
  </body>
</html>
