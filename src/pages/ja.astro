// ËÆ© TS ÊòéÁ°ÆÁü•ÈÅìÈ°πÁõÆÁªìÊûÑÔºàÊää enProfile ÊîπÊàê jaProfile Âç≥ÂèØÂ§çÁî®Ôºâ
const projects: Project[] = (jaProfile.projects as Project[]) ?? [];

/** Êää description Êó†ËÆ∫ÊòØ string ËøòÊòØ string[] Áªü‰∏ÄËΩ¨Êàê string[] */
function toLines(desc: unknown): string[] {
  if (Array.isArray(desc)) return desc.filter(Boolean).map(String);

  if (typeof desc === "string") {
    // ‰ºòÂÖàÁî®Êç¢Ë°å/ÂàÜÂè∑ÂàáÔºõÂ¶ÇÊûúÂè™Êúâ‰∏ÄÂè•ÔºåÂ∞±Áõ¥Êé•ËøîÂõû‰∏ÄÈ°π
    const arr = desc
      .split(/\r?\n|[;Ôºõ„ÄÅ]/) // ÂÖºÂÆπËã±ÊñáÂàÜÂè∑„ÄÅÊó•ÊñáÂàÜÂè∑„ÄÅÈ°øÂè∑„ÄÅ‚ÄúÊç¢Ë°å‚Äù
      .map((s) => s.trim())
      .filter(Boolean);
    return arr.length ? arr : [desc.trim()];
  }
  return [];
}
