---
import jaProfile from "../../content/profile-ja.json";
---

<!doctype html>
<html lang="ja">
  <head>
    <meta charset="utf-8" />
    <title>{jaProfile.nameKanji} - 職務経歴書</title>
    <style>
      @page {
        size: A4;
        margin: 20mm;
      }
      body {
        font-family: -apple-system, BlinkMacSystemFont, system-ui, sans-serif;
        font-size: 10pt;
        margin: 0;
        padding: 0;
        line-height: 1.6;
      }
      h1 {
        font-size: 14pt;
        margin: 0 0 4px;
      }
      h2 {
        font-size: 11pt;
        margin: 10px 0 4px;
        border-bottom: 1px solid #000;
      }
      ul {
        margin: 2px 0 0 18px;
        padding: 0;
      }
      .meta {
        font-size: 8pt;
        color: #555;
      }
    </style>
  </head>
  <body>
    <h1>職務経歴書</h1>
    <div class="meta">
      氏名：{jaProfile.nameKanji}（{jaProfile.nameKana}）<br />
      住所：{jaProfile.address}／E-mail：{jaProfile.email}
    </div>

    <h2>概要</h2>
    <p>{jaProfile.summary}</p>
    {jaProfile.summary && <p>{jaProfile.summary}</p>}

    <h2>スキル</h2>
    <ul>
      {jaProfile.skills.map((s) => <li>{s}</li>)}
    </ul>

    <h2>職務経歴</h2>
    {
      jaProfile.experience.map((job) => (
        <div style="margin-bottom:6px;">
          <strong>{job.company}</strong>（{job.location}） {job.period}
          <br />
          職種：{job.role}
          <ul>
            {job.details.map((d) => (
              <li>{d}</li>
            ))}
          </ul>
        </div>
      ))
    }

    <h2>学歴</h2>
    {
      jaProfile.education.map((edu) => (
        <div>
          {edu.period}　{edu.details}
        </div>
      ))
    }
  </body>
</html>
